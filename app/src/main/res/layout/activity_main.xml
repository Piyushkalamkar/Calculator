<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/resulttextvieww"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/quetextvieww"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"


        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="50dp"></TextView>

    <TextView
        android:id="@+id/quetextvieww"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttonslayout"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textSize="64dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonslayout"
        android:background="#f3f4f5"
        android:paddingVertical="15dp">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/cbutton"
                android:backgroundTint="#5000ca"
                ></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="("
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/obbutton"
                android:backgroundTint="#00cba9"
                ></com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text=")"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/cbbutton"
                android:backgroundTint="#00cba9"
                ></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/divbutton"

                ></com.google.android.material.button.MaterialButton>






        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/sevenbutton"
                android:backgroundTint="#ffd700"
                ></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/eightbutton"
                android:backgroundTint="#ffd700"
                ></com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/ninebutton"
                android:backgroundTint="#ffd700"
                ></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/mulbutton"

                ></com.google.android.material.button.MaterialButton>






        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/fourbutton"
                android:backgroundTint="#ffd700"
                ></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/fivebutton"
                android:backgroundTint="#ffd700"
                ></com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/sixbutton"
                android:backgroundTint="#ffd700"
                ></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/plusbutton"

                ></com.google.android.material.button.MaterialButton>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/onebutton"
                android:backgroundTint="#ffd700"
                ></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/twobutton"
                android:backgroundTint="#ffd700"
                ></com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/threebutton"
                android:backgroundTint="#ffd700"
                ></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/minusbutton"

                ></com.google.android.material.button.MaterialButton>






        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:layout_margin="12dp"
                android:id="@+id/acbutton"
                android:backgroundTint="#5000ca"
                ></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/zerobbutton"
                android:backgroundTint="#ffd700"
                ></com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="."
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/dotbbutton"
                android:backgroundTint="#ffd700"
                ></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="35dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="="
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:id="@+id/equalbutton"
                android:backgroundTint="#0099ff"

                ></com.google.android.material.button.MaterialButton>






        </LinearLayout>




    </LinearLayout>



</RelativeLayout>